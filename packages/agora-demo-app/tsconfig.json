{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "~app-ui-kit": ["src/ui-kit"],
      "~app-ui-kit/*": ["src/ui-kit/*"],
      "~app-scaffold": ["src/ui-kit/scaffold"],
      "~app-scaffold/*": ["src/ui-kit/scaffold/*"],
      "~app-styles": ["src/ui-kit/styles"],
      "~app-utilities": ["src/ui-kit/utilities"],
      "~app-utilities/*": ["src/ui-kit/utilities/*"],
      "~app-components": ["src/ui-kit/components"],
      "~app-components/*": ["src/ui-kit/components/*"],
      "@ui-kit-utils/*": ["../fcr-ui-kit/src/utils/*"],
    }
  },
  "include": [
    "src",
    "../../node_modules/electron"
  ],
  "exclude": [
    "node_modules",
    "**/*/*.stories.tsx"
  ],
}
