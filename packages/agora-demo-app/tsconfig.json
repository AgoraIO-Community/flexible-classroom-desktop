{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@/*": ["../agora-classroom-sdk/src/*"],
      "~ui-kit": ["../agora-classroom-sdk/src/ui-kit"],
      "~ui-kit/*": ["../agora-classroom-sdk/src/ui-kit/*"],
      "~scaffold": ["../agora-classroom-sdk/src/ui-kit/scaffold"],
      "~scaffold/*": ["../agora-classroom-sdk/src/ui-kit/scaffold/*"],
      "~styles": ["../agora-classroom-sdk/src/ui-kit/styles"],
      "~utilities": ["../agora-classroom-sdk/src/ui-kit/utilities"],
      "~utilities/*": ["../agora-classroom-sdk/src/ui-kit/utilities/*"],
      "~components": ["../agora-classroom-sdk/src/ui-kit/components"],
      "~components/*": ["../agora-classroom-sdk/src/ui-kit/components/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*/*.stories.tsx"
  ],
}
